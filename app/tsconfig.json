{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "include": ["src/**/*.ts", "index.ts", "src/client/src/lib/utils.tsx"],
  "exclude": ["node_modules", "src/client/**/*"]
}
